<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/itemsp_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/baseline_perm_media_24"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/icon_new"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/iconnew"/>

        <TextView
            android:id="@+id/itemsp_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemsp_image"
            android:text="Laptop"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/itemsp_gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemsp_ten"
            android:text="Giá: 25.400.000đ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#E53935"
            android:gravity="center"
            android:padding="8dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>